<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TIpsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_top"
                android:scaleType="center"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/covid_new"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="COVID - Free"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:textSize="40sp"/>

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_time"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:textColor="#896EFB"
                android:paddingTop="5dp"
                android:drawableLeft="@drawable/clock"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:layout_marginTop="170dp"
                android:text="kamis, 20 juni 2020"/>

            <TextView
                android:id="@+id/gejala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gejala"
                android:textStyle="bold"
                android:textSize="40sp"
                android:layout_below="@+id/top"
                android:gravity="center"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Virus Corona adalah virus yang menyebabkan gangguan ringan pada sistem pernapasan, infeksi paru-paru yang berat, hingga kematian."
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@+id/gejala"
                android:gravity="center"
                android:layout_marginTop="5dp"
                />


            <ImageView
                android:id="@+id/image1"
                android:layout_below="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:src="@drawable/tanda"/>

            <TextView
                android:id="@+id/pencegahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pencegahan"
                android:textStyle="bold"
                android:textSize="40sp"
                android:layout_below="@+id/image1"
                android:gravity="center"
                android:layout_marginTop="-60dp"
                />

            <TextView
                android:id="@+id/desc_pencegahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Virus corona dapat menyebar melalui kontak fisik dan juga menyebar diudara"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/pencegahan"
                android:gravity="center"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/one"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/img_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/one"/>

            <ImageView
                android:id="@+id/img_one"
                android:layout_below="@+id/desc_pencegahan"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_one"/>

            <ImageView
                android:id="@+id/two"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/img_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/two"/>

            <ImageView
                android:id="@+id/img_two"
                android:layout_below="@+id/one"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_two"/>

            <ImageView
                android:id="@+id/three"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/img_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/three"/>

            <ImageView
                android:id="@+id/img_three"
                android:layout_below="@+id/two"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_three"/>

            <ImageView
                android:id="@+id/four"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/img_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/four"/>

            <ImageView
                android:id="@+id/img_four"
                android:layout_below="@+id/three"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_four"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/four"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="20dp"
                android:text="Copyright Â© M Khairul Ramadhan"
                android:textAlignment="center"
                android:textColor="#000000" />

        </RelativeLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_main"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>